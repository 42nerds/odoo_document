<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_euro" model="report.paperformat">
            <field name="name">DIN A4</field>
            <field name="default" eval="False" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="margin_bottom">28</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">45</field>
        </record>

        <template id="assets_common" name="external_assets_din5008_report" inherit_id="web.report_assets_common">
            <xpath expr="." position="inside">
                <link href="/odoo-document/static/fonts/source-sans-pro.scss" rel="stylesheet" type="text/scss" />
                <link href="/odoo-document/static/src/scss/report_din5008.scss" rel="stylesheet" type="text/scss" />
            </xpath>
        </template>

        <template id="external_layout_din5008">
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc" />
            </t>

            <t t-if="doc and 'company_id' in doc">
                <t t-set="company" t-value="doc.company_id.sudo()" />
            </t>

            <t t-if="not doc or not 'company_id' in doc">
                <t t-set="company" t-value="res_company" />
            </t>

            <div class="header">
                <header>
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" />
                </header>
            </div>
                
            <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
                <div class="heading">
                    <div class="heading-address">
                        <div class="address--company">
                            <!-- Better character that doesn't work in print tho: ï½œ -->
                            <span class="color--primary font-weight--semibold" t-field="company.name" /> | <span t-field="company.street" /> | <span t-field="company.zip" /> <span t-field="company.city" />
                        </div>

                        <div class="address--customer">
                            <span class="font-weight--semibold" t-field="o.partner_id.parent_id.name" />
                            <div t-field="o.partner_id" t-options="{ 'widget': 'contact', 'fields': ['address'], 'no_marker': true }" />
                        </div>
                    </div>

                    <div class="heading-information">
                        <t t-if="information_block">
                            <t t-raw="information_block" />
                        </t>
                    </div>
                </div>

                <article class="page">
                    <t t-raw="0" />
                </article>
            </div>

            <div class="footer o_background_footer">
                <div class="page-number">
                    Seite <span class="page" /> von <span class="topage" />
                </div>

                <footer>
                    <div class="row lh--1">
                        <div class="col-3">
                            <span class="color--primary font-weight--semibold" style="font-size: 14px" t-field="company.name" /><br />
                            <br />
                            <span t-field="company.street" /><br />
                            <span t-field="company.zip" /> <span t-field="company.city" />
                        </div>
                        <div class="col-3">
                            <dl>
                                <dt>Telefon</dt>
                                <dd><span t-field="company.phone" /></dd>
                                <dt>Fax</dt>
                                <dd><span t-field="company.phone" /></dd>
                                <dt>E-Mail</dt>
                                <dd><span t-field="company.email" /></dd>
                            </dl>
                        </div>
                        <div class="col-3">
                            <dl>
                                <dt>Volksbank Uelzen-Salzwedel eG</dt>
                                <dd><span>&#160;</span></dd>
                                <dt>BIC</dt>
                                <dd>GENODEF1EUB</dd>
                                <dt>IBAN</dt>
                                <dd>DE35 2586 2292 0706 2486 00</dd>
                            </dl>
                        </div>
                        <div class="col-3">
                            <dl>
                                <dt>St.-Nr.</dt>
                                <dd>47/121/00868</dd>
                                <dt>USt-IdNr.</dt>
                                <dd>DE293688355</dd>
                                <dt style="font-weight: 400"><span t-field="company.website" /></dt>
                                <dd><span>&#160;</span></dd>
                            </dl>
                        </div>
                    </div>
                </footer>

                <!-- <div class="text-center">
                    <ul class="list-inline">
                        <li t-if="company.phone"><i class="fa fa-phone"/> <span t-field="company.phone"/></li>
                        <li t-if="company.email"><i class="fa fa-at"/> <span t-field="company.email"/></li>
                        <li t-if="company.website"><i class="fa fa-globe"/> <span t-field="company.website"/></li>
                        <li t-if="company.vat"><i class="fa fa-building-o"/><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>
                    <div t-field="company.report_footer"/>
                </div> -->
            </div>
        </template>
    </data>
</odoo>